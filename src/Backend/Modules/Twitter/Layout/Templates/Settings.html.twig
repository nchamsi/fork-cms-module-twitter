{% extends '/Layout/Templates/base.html.twig' %}

{% block actionbar %}

{% endblock %}

{% block content %}
  {% form settings %}
  <div class="row fork-module-content">
    <div class="col-md-12">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">
            {{ 'lbl.Timeline'|trans|ucfirst }}
          </h3>
        </div>
        <div class="panel-body">
          <div class="form-group">
            <label for="addValue-accounts" class="control-label">{{ 'lbl.CountTweets'|trans|ucfirst }}</label>
            {% form_field count %} {% form_field_error count %}
          </div>
          <div class="form-group">
            <label for="addValue-accounts" class="control-label">{{ 'lbl.Accounts'|trans|ucfirst }}</label>
            {% form_field accounts %} {% form_field_error accounts %}
          </div>
          <div class="form-group">
            <label for="addValue-hashtags" class="control-label">{{ 'lbl.Hashtags'|trans|ucfirst }}</label>
            {% form_field hashtags %} {% form_field_error hashtags %}
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="row fork-module-content">
    <div class="col-md-12">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">
            {{ 'lbl.Settings'|trans|ucfirst }}
          </h3>
        </div>
        <div class="panel-body">
          <div class="form-group">
            <label for="twitterConsumerKey" class="control-label">{{ 'lbl.TwitterConsumerKey'|trans|ucfirst }}</label>
            {% form_field twitter_consumer_key %} {% form_field_error twitter_consumer_key %}
          </div>
          <div class="form-group">
            <label for="twitterConsumerSecret" class="control-label">{{ 'lbl.TwitterConsumerSecret'|trans|ucfirst }}</label>
            {% form_field twitter_consumer_secret %} {% form_field_error twitter_consumer_secret %}
          </div>
          <div class="form-group">
            <label for="twitterOauthToken" class="control-label">{{ 'lbl.TwitterOauthToken'|trans|ucfirst }}</label>
            {% form_field twitter_oauth_token %} {% form_field_error twitter_oauth_token %}
          </div>
          <div class="form-group">
            <label for="twitterOauthTokenSecret" class="control-label">{{ 'lbl.TwitterOauthTokenSecret'|trans|ucfirst }}</label>
            {% form_field twitter_oauth_token_secret %} {% form_field_error twitter_oauth_token_secret %}
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="row fork-module-actions">
    <div class="col-md-12">
      <div class="btn-toolbar">
        <div class="btn-group pull-right" role="group">
          <button id="save" type="submit" name="save" class="btn btn-primary">
            <span class="fa fa-floppy-o"></span>{{ 'lbl.Save'|trans|ucfirst }}</button>
        </div>
      </div>
    </div>
  </div>
  {% endform %}
{% endblock %}
